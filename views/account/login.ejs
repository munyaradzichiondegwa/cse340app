 <% if (messages && messages.notice) { %>
        <div class="notice">
            <% messages.notice.forEach(msg=> { %>
                <%= msg %>
                    <% }) %>
        </div>
        <% } %>

            <% if (errors && errors.length> 0) { %>
                <div class="notice">
                    <ul class="error-list">
                        <% errors.forEach(error=> { %>
                            <li>
                                <%= error.msg %>
                            </li>
                            <% }); %>
                    </ul>
                </div>
                <% } %>

                    <form id="loginForm" action="/account/login" method="post" novalidate>
                        <label for="loginEmail">Email:</label><br />
                        <input type="email" id="loginEmail" name="account_email" required placeholder="Enter your email"
                            value="<%= typeof account_email !== 'undefined' ? account_email : '' %>" /><br /><br />

                        <label for="loginPassword">Password:</label><br />
                        <div class="password-requirements">
                            Password must be at least 12 characters and contain at least 1 number, 1 capital letter, and
                            1 special
                            character.
                        </div>
                        <input type="password" id="loginPassword" name="account_password" required
                            pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$" /><br /><br />

                        <button type="submit">Login</button>
                    </form>

                    <p>
                        Don't have an account? <a href="/account/register">Click to register</a>
                    </p>