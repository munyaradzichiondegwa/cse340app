<h1>Login</h1>

<% if (errors && errors.length> 0) { %>
    <div class="error-message">
        <ul>
            <% errors.forEach(function(error) { %>
                <li>
                    <%= error.msg %>
                </li>
                <% }); %>
        </ul>
    </div>
    <% } %>

        <form action="/account/login" method="POST" novalidate>
            <label for="loginEmail">Email:</label><br />
            <input type="email" id="loginEmail" name="account_email" required placeholder="Enter your email"
                value="<%= typeof account_email !== 'undefined' ? account_email : '' %>" /><br /><br />

            <label for="loginPassword">Password:</label><br />
            <div class="password-requirements">
                Password must be at least 12 characters and contain at least 1 number, 1 capital letter, and 1 special
                character
            </div>
            <input type="password" id="loginPassword" name="account_password" required
                pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$" /><br /><br />

            <button type="submit">Login</button>
        </form>