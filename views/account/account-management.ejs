

    <h1>Account Management</h1>

    <% if (messages && messages.notice) { %>
        <ul class="notice">
            <% messages.notice.forEach(msg=> { %>
                <li>
                    <%= msg %>
                </li>
                <% }) %>
        </ul>
        <% } %>

            <% if (errors && errors.length> 0) { %>
                <ul class="notice">
                    <% errors.forEach(error=> { %>
                        <li>
                            <%= error.msg %>
                        </li>
                        <% }) %>
                </ul>
                <% } %>

                    <% if (accountData) { %>
                        <h2>Welcome <%= accountData.account_firstname %>
                        </h2>

                        <p><a href="/account/update/<%= accountData.account_id %>">Update Account Information</a></p>
                        <p><a href="/account/my-reviews">View My Reviews</a></p> <!-- ADDED: Link to My Reviews -->

                        <% if (accountData.account_type==='Employee' || accountData.account_type==='Admin' ) { %>
                            <h3>Inventory Management</h3>
                            <p><a href="/inv/">Manage Inventory</a></p>
                            <% } %>
                                <% } %>