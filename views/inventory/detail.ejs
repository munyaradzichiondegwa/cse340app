

    <% if (messages && messages.notice) { %>
        <div class="notice">
            <% messages.notice.forEach(msg=> { %>
                <%= msg %>
                    <% }) %>
        </div>
        <% } %>

            <% if (errors && errors.length> 0) { %>
                <div class="notice">
                    <ul class="error-list">
                        <% errors.forEach(error=> { %>
                            <li>
                                <%= error.msg %>
                            </li>
                            <% }); %>
                    </ul>
                </div>
                <% } %>

                    <% if (inventory) { %>
                        <h1>
                            <%= inventory.inv_make %>
                                <%= inventory.inv_model %>
                        </h1>
                        <div class="vehicle-detail-container">
                            <div class="vehicle-image">
                                <img src="<%= inventory.inv_image %>" alt="Image of <%= inventory.inv_year %> <%= inventory.inv_make %> <%= inventory.inv_model %>" />
                            </div>
                            <div class="vehicle-info">
                                <h2>Year: <%= inventory.inv_year %>
                                </h2>
                                <h3>Price: $<%= new Intl.NumberFormat('en-US').format(inventory.inv_price) %>
                                </h3>
                                <p><strong>Description:</strong>
                                    <%= inventory.inv_description %>
                                </p>
                                <p><strong>Color:</strong>
                                    <%= inventory.inv_color %>
                                </p>
                                <p><strong>Mileage:</strong>
                                    <%= new Intl.NumberFormat('en-US').format(inventory.inv_miles) %>
                                        miles
                                </p>
                            </div>
                        </div>

                        <hr>

                        <!-- Review Section -->
                        <section class="review-section">
                            <h2>Customer Reviews</h2>

                            <% if (accountData && accountData.account_id) { %>
                                <div class="review-form-container">
                                    <h3>Submit Your Review</h3>
                                    <form action="/review/add-review" method="POST">
                                        <input type="hidden" name="inv_id" value="<%= inventory.inv_id %>">
                                        <!-- account_id is taken from res.locals.accountData in controller -->

                                        <label for="review_rating">Rating (1-5):</label>
                                        <input type="number" id="review_rating" name="review_rating" min="1" max="5"
                                            required
                                            value="<%= typeof review_rating !== 'undefined' ? review_rating : '' %>">
                                        <br><br>

                                        <label for="review_text">Your Review:</label>
                                        <textarea id="review_text" name="review_text" rows="5" required
                                            placeholder="Write your review here (min 10 characters)"><%= typeof review_text !== 'undefined' ? review_text : '' %></textarea>
                                        <br><br>

                                        <button type="submit">Post Review</button>
                                    </form>
                                </div>
                                <% } else { %>
                                    <p>Please <a href="/account/login">log in</a> to submit a review.</p>
                                    <% } %>

                                        <div class="existing-reviews">
                                            <h3>All Reviews</h3>
                                            <% if (reviews && reviews.length> 0) { %>
                                                <ul class="review-list">
                                                    <% reviews.forEach(review=> { %>
                                                        <li>
                                                            <p><strong>
                                                                    <%= review.account_firstname %>
                                                                        <%= review.account_lastname.charAt(0) %>.
                                                                </strong>
                                                                - Rating: <%= review.review_rating %>/5</p>
                                                            <p>"<%= review.review_text %>"</p>
                                                            <p class="review-date">Reviewed on: <%= new
                                                                    Date(review.review_date).toLocaleDateString('en-US',
                                                                    { year: 'numeric' , month: 'long' , day: 'numeric'
                                                                    }) %>
                                                            </p>
                                                        </li>
                                                        <% }); %>
                                                </ul>
                                                <% } else { %>
                                                    <p>No reviews yet for this vehicle. Be the first!</p>
                                                    <% } %>
                                        </div>
                        </section>
                        <% } else { %>
                            <p class="notice">Sorry, this vehicle's details could not be found.</p>
                            <% }%>